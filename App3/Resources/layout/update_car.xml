<?xml version="1.0" encoding="utf-8" ?> 
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10px"
            android:layout_marginBottom="6px"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/textview_first"
            android:layout_width="201dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16px"
            android:autoSizeTextType="uniform"
            android:text="Enter info about car"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="110dp"
            android:text="Kilometers driven"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/kilometersDriven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="120dp"
            android:ems="10"
            android:hint="200000"
            android:inputType="phone"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="170dp"
            android:text="Last oil change"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/lastOilChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="180dp"
            android:ems="10"
            android:hint="150000"
            android:inputType="phone"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:text="Current tyres"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/tyreType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="Winter/Summer/ All Season"
            android:inputType="textPersonName"
            android:fadeScrollbars="true"/>

        <TextView
             android:id="@+id/textView7"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:layout_marginTop="230dp"
             android:text="Date of last oil change"
             android:textColor="#000000"/>

        
        <DatePicker
            android:id="@+id/datePicker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="230dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"/>

    </RelativeLayout>
</LinearLayout>